<Window x:Class="TaskController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskController"
        mc:Ignorable="d" ShowInTaskbar="False" Loaded="Window_Loaded" WindowStartupLocation="Manual"
        WindowStyle="None" AllowsTransparency="True" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title=" .: Task Manager :. " Height="40" Width="160" ResizeMode="NoResize" Topmost="True" MouseRightButtonUp="Window_MouseRightButtonUp">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Name="btnStartTask" Margin="4" Content="Start Task" HorizontalAlignment="Left" Width="60" Click="btnStartTask_Click"/>
        <Button Grid.Column="1" Name="btnEndTask" Margin="4" Content="End Task" HorizontalAlignment="Right" Width="60" Click="btnEndTask_Click"/>
    </Grid>
</Window>
